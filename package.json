{
  "name": "@poppinss/cookie",
  "version": "1.0.7",
  "description": "Cookie parser for Node.js",
  "main": "build/index.js",
  "files": [
    "build/src",
    "build/index.d.ts",
    "build/index.js"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "eslint . --ext=.ts",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && typedoc --theme markdown --excludePrivate && git add docs",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build"
  },
  "keywords": [
    "cookie",
    "adonisjs"
  ],
  "author": "virk,poppinss",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/mrm-preset": "^2.2.4",
    "@types/cookie": "^0.3.3",
    "@types/cookie-signature": "^1.0.3",
    "@types/node": "^13.7.6",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "del-cli": "^3.0.0",
    "doctoc": "^1.4.0",
    "eslint": "^6.8.0",
    "eslint-plugin-adonis": "^1.0.8",
    "husky": "^4.2.3",
    "japa": "^3.0.1",
    "mrm": "^2.0.4",
    "np": "^6.1.0",
    "ts-node": "^8.6.2",
    "typedoc": "^0.16.10",
    "typedoc-plugin-external-module-name": "^3.0.0",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.8.2"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false,
    "yolo": false
  },
  "dependencies": {
    "@hapi/bourne": "^2.0.0",
    "cookie": "^0.4.0",
    "cookie-signature": "^1.1.0",
    "ms": "^2.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poppinss/cookie.git"
  },
  "bugs": {
    "url": "https://github.com/poppinss/cookie/issues"
  },
  "homepage": "https://github.com/poppinss/cookie#readme"
}
